@model IEnumerable<Restaurant.Models.Meal>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Food
        </th>
        <th>
            Drink
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MealId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MealId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MealId })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.Food == null ? "None" : item.Food.Name)
        </td>
        <td>
			@(item.Drink == null ? "None" : item.Drink.Name)
        </td>
    </tr>
}

</table>


