@model Restaurant.Models.Meal

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Meal</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Food</div>
    <div class="display-field">@(Model.Food == null ? "None" : Model.Food.Name)</div>

    <div class="display-label">Drink</div>
    <div class="display-field">@(Model.Drink == null ? "None" : Model.Drink.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


